<main class="contenedor">
    <form action="/crear-cuenta" method="post" class="default-form">
        <div class="campo">
            <label>Nombre</label>
            <input type="text" name="nombre" placeholder="Nombre">
        </div>
        <div class="campo">
            <label>Correo</label>
            <input type="email" name="email" placeholder="Correo">
        </div>
        <div class="campo">
            <label>Contraseña</label>
            <input type="password" name="password" placeholder="Contraseña">
        </div>
        <div class="campo">
            <label>Repetir Contraseña</label>
            <input type="password" name="confirmar" placeholder="Repetir contraseña">
        </div>
        <div class="campo acciones">
           <a href="/iniciar-sesion">Volver a iniciar sesión</a> 
        </div>
        <div class="campo">
            <input type="submit" value="Crear cuenta" class="btn btn-azul">
        </div>
    </form>
</main>